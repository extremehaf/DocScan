<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/card_grid_margin"
        android:elevation="3dp"
        card_view:cardCornerRadius="@dimen/card_grid_album_radius">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/preview_foto"
                android:layout_width="match_parent"
                android:layout_height="@dimen/card_grid_cover_height"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/txt_titulo"
                style="@style/autoscroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/preview_foto"
                android:layout_marginRight="40dp"
                android:ellipsize="middle"
                android:paddingLeft="@dimen/card_grid_title_padding"
                android:paddingRight="@dimen/card_grid_title_padding"
                android:paddingTop="@dimen/card_grid_title_padding"
                android:textColor="@color/card_grid_title"
                android:textSize="@dimen/card_grid_title" />

            <TextView
                android:id="@+id/txt_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_titulo"
                android:paddingBottom="@dimen/card_grid_count_padding_bottom"
                android:paddingLeft="@dimen/title_padding"
                android:paddingRight="@dimen/title_padding"
                android:textSize="@dimen/card_grid_count" />

            <TextView
                android:id="@+id/txt_paginas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_data"
                android:paddingBottom="@dimen/card_grid_count_padding_bottom"
                android:paddingLeft="@dimen/title_padding"
                android:paddingRight="@dimen/title_padding"
                android:textSize="@dimen/card_grid_count" />

            <TextView
                android:id="@+id/txt_tamanho"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/txt_data"
                android:paddingBottom="@dimen/card_grid_count_padding_bottom"
                android:paddingLeft="@dimen/title_padding"
                android:paddingRight="@dimen/title_padding"
                android:textSize="@dimen/card_grid_count" />

            <ImageView
                android:id="@+id/ic_context"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/preview_foto"
                android:layout_marginEnd="8dp"
                android:background="@drawable/ic_context"
                android:clickable="true"
                android:padding="8dp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

